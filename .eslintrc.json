{
  "root": true,
  "plugins": ["simple-import-sort", "import"],
  "extends": ["react-app", "react-app/jest"],
  "rules": {
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          ["^react", "^@?\\w"],
          ["^@alfalab/core-components(/.*|$)"],
          ["^@alfalab/icons-.*(/.*|$)"],
          ["^components(/.*|$)"],
          ["^services(/.*|$)"],
          ["^store(/.*|$)"],
          ["^api(/.*|$)"],
          ["^utils(/.*|$)"],
          ["^routes(/.*|$)"],
          ["^mocks(/.*|$)"],
          ["^types(/.*|$)"],
          ["^assets(/.*|$)"],
          ["^styles(/.*|$)"],
          ["^.+\\.css$"],
          ["^\\u0000"],
          ["^\\.\\.(?!/?$)", "^\\.\\./?$"],
          ["^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"]
        ]
      }
    ]
  }
}
