{
  "name": "a-store",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://arslandev666.github.io/a-store/",
  "author": "Arslan Mustafin <arslan.mustafin.dev@gmail.com>",
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!axios)/"
    ],
    "watchPathIgnorePatterns": [
      "src/mocks"
    ]
  },
  "dependencies": {
    "@alfalab/core-components": "^39.0.0",
    "@hookform/resolvers": "^2.9.11",
    "@reduxjs/toolkit": "^1.9.2",
    "axios": "^1.3.3",
    "classnames": "^2.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.3",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.2.2",
    "typescript": "^4.9.4",
    "uuid": "^9.0.0",
    "web-vitals": "^2.1.4",
    "yup": "^1.0.0"
  },
  "scripts": {
    "pre-deploy": "npm run build",
    "deploy": "gh-pages -d build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:ci": "react-scripts test --coverage --watchAll",
    "eject": "react-scripts eject",
    "prepare": "husky install",
    "lint": "eslint \"**/*.+(js|jsx|ts|tsx)\" --fix",
    "code-format": "prettier --ignore-path .gitignore --write \"**/*.+(js|jsx|ts|tsx|json)\"",
    "style-format": "stylelint --ignore-path .gitignore \"**/*.+(css|scss|saas)\" --fix",
    "prepare-for-pull": "npm-run-all --parallel style-format code-format lint"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.11",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "gh-pages": "^5.0.0",
    "@types/react-test-renderer": "^18.0.0",
    "@types/redux-persist": "^4.3.1",
    "@types/uuid": "^9.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "msw": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "react-test-renderer": "^18.2.0",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-order": "^6.0.1",
    "stylelint-order-config-standard": "^0.1.3"
  }
}
